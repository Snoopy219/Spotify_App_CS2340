<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".MainActivity">

<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize"-->
<!--            android:background="?attr/colorPrimary"-->
<!--            app:title="Spotify Wrapped"-->
<!--            app:titleTextColor="@android:color/white"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Spotify Wrapped"
            app:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="204dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/describe_image"
                    android:src="@drawable/music_note" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <!--  button to scroll to top songs section-->
                    <Button
                        android:id="@+id/TopSongsButton"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Top Songs" />

                    <!--  button to scroll to top artists section-->
                    <Button
                        android:id="@+id/TopArtistsButton"
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Top Artists" />

                    <!--  button to scroll to top songs section-->
                    <Button
                        android:id="@+id/TopGenresButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Top Genres" />

                </LinearLayout>

                <TextView
                    android:id="@+id/sectionTopSongs"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#92C7CF"
                    android:text="@string/top_songs"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>

                <!--  RecyclerView in top songs section-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTopSongs"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/sectionTopArtists"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#92C7CF"
                    android:text="@string/top_artists"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    />

                <!--  RecyclerView in top artists section-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTopArtists"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/sectionTopGenres"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#92C7CF"
                    android:text="@string/top_genres"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>

                <!--  RecyclerView in top genres section-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTopGenres"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>